
@{
    ViewData["Title"] = "SignupView";
}
@model CarrierSearchInc.Models.SignUp

<h1>SignupView</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="~/images/undraw_sign_in_e6hj.png" width="750" />
        </div>
        <div class="col-md-12">
            <h3 class="display-4 text-center">Sign Up</h3>
        </div>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Job Seeker</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Company</a>
                </li>
              
            </ul>
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                    <h3>Helloo</h3>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-8">
                                <form method="post" asp-controller="Home" asp-action="SignupView">


                                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="FirstName" id="firstName" class="form-control" placeholder=" Enter User Name" />
                                        <span class="firstname"></span>
                                    </div>
                                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="LastName" id="lastName" class="form-control" placeholder=" Enter User Name" />
                                        <span class="lastname"></span>
                                    </div>
                                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" id="email" class="form-control" placeholder="Email" />
                                        <span class="email"></span>
                                    </div>
                                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Password" class="form-control" placeholder="Password " />
                                    </div>

                                    <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confrim Password" />
                                    </div>
                                    <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="DateOfBirth" class="form-control" placeholder="DateOfBirth" />
                                    </div>
                                    <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Phone" id="phone" class="form-control" placeholder="Phone" />
                                        <span class="phone"></span>
                                    </div>
                                    <label asp-for="Address"  class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <textarea asp-for="Address" id="address" class="form-control" placeholder="Address" ></textarea>
                                        <span class="address"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="button" class="btn btn-primary ml-3 mt-4" value="submit" />
                                    </div>

                                </form>
                            </div>

                            <div class="col-md-1"></div>
                        </div>
                    </div>

                </div>
                <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
                    <h3>Hellooeoeoeo</h3>
                    <div class="container">
                        <div class="row">
                            <div class="col-md-3"></div>
                            <div class="col-md-8">
                                <form method="post" asp-controller="Home" asp-action="LoginView">


                                    <label asp-for="FirstName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="FirstName" class="form-control" placeholder=" Enter User Name" />
                                    </div>
                                    <label asp-for="LastName" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="LastName" class="form-control" placeholder=" Enter User Name" />
                                    </div>
                                    <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Email" class="form-control" placeholder="Email" />
                                    </div>
                                    <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Password" class="form-control" placeholder="Password " />
                                    </div>

                                    <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Confrim Password" />
                                    </div>
                                    <label asp-for="DateOfBirth" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="DateOfBirth" class="form-control" placeholder="DateOfBirth" />
                                    </div>
                                    <label asp-for="Phone" class="col-sm-2 col-form-label"></label>
                                    <div class="col-sm-10">
                                        <input asp-for="Phone" class="form-control" placeholder="Phone" />
                                    </div>
                                    <div class="form-group">
                                        <input type="button" class="btn btn-primary ml-3 mt-4" value="submit" />
                                    </div>

                                </form>
                            </div>

                            <div class="col-md-1"></div>
                        </div>
                    </div>

                </div>
              
            </div>
        </div>
    </div>
</div>



