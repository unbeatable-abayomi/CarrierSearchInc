
@{
    ViewData["Title"] = "LoginView";
}

@model CarrierSearchInc.Models.Login

<h1>LoginView</h1>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <img src="~/images/undraw_authentication_fsn5.png" width="750" />
        </div>
        <div class="col-md-12">
            <h3 class="display-4 text-center">Log In</h3>
        </div>

    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-3"></div>
         <div class="col-md-8">
             <form method="post" asp-controller="Home"  asp-action="LoginView">


                 <label asp-for="UserName" class="col-sm-2 col-form-label"></label>
                 <div class="col-sm-10">
                     <input asp-for="UserName" class="form-control" placeholder=" Enter User Name" />
                     <span asp-validation-for="UserName" class="text-danger"></span>
                 </div>

                 <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                 <div class="col-sm-10">
                     <input asp-for="Password" class="form-control" placeholder=" Enter Password" />
                     <span asp-validation-for="Password" class="text-danger"></span>
                 </div>
                 <div class="form-group">
                     <input type="button" class="btn btn-primary ml-3 mt-4" value="submit" />
                 </div>
               
             </form>
         </div>

         <div class="col-md-1"></div>
    </div>
</div>

